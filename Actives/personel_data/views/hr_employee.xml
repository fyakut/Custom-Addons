<?xml version="1.0"?>
<odoo>
    <record id="view_form_hr_employee_extend" model="ir.ui.view">
        <field name="name">Extensions for Business</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <field name="address_id" position="before">
                <field name="sicil_no"/>
                <field name="rank"/>
            </field>
            <field name="tz" position="before">
                <field name="start_date"/>
                <field name="service_time"/>
            </field>
        </field>
    </record>
</odoo>